#!/usr/bin/env bash

if [ "$(uname -s)" = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -l'
else
    alias open="xdg-open"
fi

export WD
WD=$(pwd)

for f in build bin; do
    mkdir "$WD/$f"
done

indent () {
    if [ -d "$1" ]; then
        if ls "$1"/*.ml >/dev/null 2>&1; then
            for x in "$1"/*.ml; do
                echo "$x"
                ocp-indent -i "$x"
            done
        fi
    fi
}

export -f indent
